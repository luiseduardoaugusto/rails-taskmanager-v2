<%= form_with model: @task do |form| %>
<div class="card my-5">
  <div class="card-body">
    <div class="mb-3">
      <%= form.label :title, {class: "form-label"} %>
      <%= form.text_field :title, {class: "form-control", placeholder: "Ingresa una Tarea" } %>
    </div>
    <div class="mb-3">
      <%= form.label :details, {class: "form-label"}  %>
      <%= form.text_field :details, {class: "form-control", placeholder: "Ingresa algunos detalles" } %>
    </div>
    <div class="mb-3">
      <%= form.check_box :completed %>
      <%= form.label :completed %>
    </div>
    <%= form.submit "Crear Trea", class: "btn btn-primary"%>
  </div>
</div>
<% end %>
