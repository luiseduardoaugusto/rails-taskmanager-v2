<h1>All tasks</h1>


<% @tasks.each do |task| %>
  <ul class="lista-tareas">
    <li>
    <%= task.completed ? "✅" : "❌"%>
    </li>
    <li> <%= link_to task.title , task_path(task.id), class: "no-decor"  %></li>
    <%= link_to task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} do %>
    <i class="fa-regular fa-trash-can"></i>
     <% end %>
  </ul>

<% end %>


<%= link_to 'Crear nueva Tarea', class: "no-decor" %>
